<thead>
    <tr>
        {{#if data}}
            {{#each data.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            {{#if button}}<th></th>{{/if}}
        {{else}}<th>No data to display</th>{{/if}}
    </tr>
</thead>
